<?xml version="1.0" encoding="utf-8"?>  
<FrameLayout android:id="@+id/FrameLayout01"  
    android:layout_width="fill_parent" android:layout_height="fill_parent"  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <SurfaceView android:layout_height="fill_parent"  
        android:id="@+id/surface" android:layout_width="fill_parent"></SurfaceView>
    <RelativeLayout android:layout_height="fill_parent" android:id="@+id/RelativeLayout01" android:layout_width="fill_parent">
        <View android:layout_height="300dip" android:id="@+id/centerView" android:layout_width="300dip" android:layout_alignParentRight="true" android:layout_marginRight="100dp" android:background="#55FF6666" android:layout_alignParentTop="true"></View>
        <ImageView android:layout_height="160dip" android:layout_width="160dip" android:layout_toLeftOf="@+id/centerView" android:id="@+id/ImageView01" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"></ImageView>
        <TextView android:textColor="#FF0000" android:layout_alignParentLeft="true" android:layout_marginLeft="22dp" android:layout_below="@+id/ImageView01" android:id="@+id/tekst" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Scanning..."></TextView>
        <EditText android:id="@+id/wynik" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/tekst" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_alignRight="@+id/ImageView01">
            <requestFocus></requestFocus>
        </EditText>
    </RelativeLayout>  
</FrameLayout>  